@model List<FootballScoreboard.Domain.Entities.Match>

@{
    ViewData["Title"] = "Football World Cup Scoreboard";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Football World Cup Scoreboard</h2>

    <!-- Scoreboard Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="scoreboard">
            <thead class="table-dark">
                <tr>
                    <th>Home Team</th>
                    <th>Away Team</th>
                    <th>Score</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var match in Model)
                {
                    <tr data-home="@match.HomeTeam" data-away="@match.AwayTeam">
                        <td>@match.HomeTeam</td>
                        <td>@match.AwayTeam</td>
                        <td class="score">@match.HomeScore - @match.AwayScore</td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <input type="number" class="form-control form-control-sm home-score" min="0" value="@match.HomeScore" required />
                                <input type="number" class="form-control form-control-sm away-score" min="0" value="@match.AwayScore" required />
                                <button class="btn btn-primary btn-sm update-score">Update</button>
                                <button class="btn btn-danger btn-sm finish-game">Finish</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Start a New Game Form -->
    <h3 class="mt-5">Start a New Game</h3>
    <form id="startGameForm" class="mt-3">
        <div class="row g-3">
            <div class="col-md-6">
                <label for="homeTeam" class="form-label">Home Team</label>
                <input type="text" id="homeTeam" class="form-control" placeholder="Enter home team name" required />
            </div>
            <div class="col-md-6">
                <label for="awayTeam" class="form-label">Away Team</label>
                <input type="text" id="awayTeam" class="form-control" placeholder="Enter away team name" required />
            </div>
        </div>
        <button type="submit" class="btn btn-success mt-3">Start Game</button>
    </form>
</div>

@section Scripts {
     <script src="~/js/pages/scorboard.js"></script>
}